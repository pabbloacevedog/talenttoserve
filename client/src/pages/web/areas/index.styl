@import '../../../css/quasar.variables.styl';

.fondo_inicio {
	background: linear-gradient(180deg, #000000, #010003, #030006, #040009, #06000b, #07000e, #090010, #0a0012);
}

.div_fondo_areas {
	height: 111vh;
	background: linear-gradient(180deg, #000000, #010003, #030006, #040009, #06000b, #07000e, #090010, #0a0012);
}

.div_cont {
	background-size: contain;
	background-position: right;
	margin-bottom: 6px;
}

.card-areas {
	background: #393c4e96;
	backdrop-filter: blur(8.5px);
	width: 75%;
	margin-left: 12%;
	margin-top: 5%;
	border-radius: 15px;
}

.card-titulo {
	padding: 13px 25px;
	font-size: 1.4em;
	font-weight: 600;
}

.titulo-areas {
	font-size: 3em;
	font-family: 'comfortaa_b';
}

.avatar-sect {
	text-align: center;
}

.avatar-sect avatar-cont {
	display: inline-block;
}

.ver_mas {
	background: linear-gradient(to right, #f12711, #f5af19);
	padding: 16px 23px !important;
}

@media only screen and (max-width: 767px) {
	.titulo-areas {
		margin-top: 5%;
		font-size: 2em;
		font-family: 'comfortaa_b';
	}

	.div_fondo_areas {
		background-image: url('/statics/img/8.png');
		background-size: cover;
		background-position: right;
		width: 100vw;
		height: 100%;
	}

	.div_cont {
		margin-bottom: 3vh;
	}
}

    background: linear-gradient(180deg, #000000, #010003, #030006, #040009, #06000b, #07000e, #090010, #0a0012);
}
.div_fondo_areas
    height: 111vh;
    background: linear-gradient(180deg, #000000, #010003, #030006, #040009, #06000b, #07000e, #090010, #0a0012);

.div_cont
    background-image: url("/statics/img/paint.png");
    background-size: contain;
    background-position: right;
    margin-bottom: 6px;
    
.card-areas
    background: #161616bd
    backdrop-filter: blur(8.5px);
    width: 75%;
    margin-left: 12%;
    margin-top: 5%;
    border-radius: 15px;

.card-titulo
    padding-bottom: 0px;  
    font-size: 1.2em;
    font-family 'monserrat_bold' 


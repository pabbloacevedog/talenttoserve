@import '../../../css/quasar.variables.styl';

.fondo_inicio {
	background-image: url('https://mdn.mozillademos.org/files/6457/mdn_logo_only_color.png');
}

.fondo_historia {
	height: 111vh;
	background-image: url('/statics/img/fondo_historia.png');
	background-size: cover;
}

.text-historia {
	font-size: 1.2em;
	background-color: #0000006b;
	border-radius: 25px;
	padding: 8%;
}

.titulo-historia {
	font-size: 3em;
	font-family: 'comfortaa_b';
}

@media only screen and (max-width: 767px) {
	.text-historia {
		font-size: 1.3em;
		border-radius: 0px;
		background: rgba(0, 0, 0, 0.65);
		backdrop-filter: blur(8.5px);
		padding: 1% 8%;
	}

	.titulo-historia {
		margin-top: 5%;
		font-size: 1.8em;
		font-family: 'comfortaa_b';
		text-align: center;
	}

	.fondo_historia {
		height: 100vh;
		width: 100vw;
		background-image: url('/statics/img/fondo_historia_mobile.png');
	}

	.div-text-historia {
		margin: 45vh 0vh;
		font-weight:bold;
	}
}

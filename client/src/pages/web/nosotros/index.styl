@import '../../../css/quasar.variables.styl';

.q-carousel__navigation--bottom {
	top: 16px !important;
}

.fondo_inicio {
	background-image: url('https://mdn.mozillademos.org/files/6457/mdn_logo_only_color.png');
}

.fondo_nosotros {
	height: 100%;
	background-size: cover;
}

.nombre_nosotros {
	font-size: 20px;
	font-weight: bold;
}

.fondo_carousel {
	height: auto !important;
	background: #000000a6;
	backdrop-filter: blur(8.5px);
	border-radius: 20px;
}

.sect_nosotros {
	display: flex;
	justify-content: center;
	padding: 4px;
}

.cargo_nosotros {
	font-size: 15px;
	padding: 10px 15px;
	font-weight: bold;
	text-align: center;
	color: #b1b1b1;
}

:root {
	--size-avatar: 250px;
	--size-border: 10px;
}

.desc_text {
	font-size: 1.2em;
	padding: 3%;
	color: #ababab;
	text-align: center;
}

.q-carousel .q-carousel__thumbnail {
	margin: 7px;
	height: 55px;
	width: 55px;
	display: inline-block;
	cursor: pointer;
	border: none;
	border-radius: 4px;
	vertical-align: middle;
	opacity: 0.7;
	transition: opacity 0.3s;
}

.q-carousel__thumbnail {
	align-items: center;
	border-radius: 50% !important;
	padding: 2px;
	background-image: linear-gradient(
		45deg,
		#ffa95f 5%,
		#f99c4a 15%,
		#f47838 30%,
		#e75157 45%,
		#d92d7a 70%,
		#cc2a92 80%,
		#c32e92 95%
	);
}

.q-carousel__thumbnail--active {
	background-image: linear-gradient(45deg, #31bf03 5%, #00f59b 95%);
}

.q-carousel__control {
	color: #fff0 !important;
}

.avatar {
	background-image: linear-gradient(45deg, #31bf03 5%, #00f59b 95%);
	width: 160px;
	height: 160px;
	padding: 5px;
	width: var(--size-avatar);
	z-index: 1000;

	&, & > img {
		border-radius: 50%;
	}

	& > img {
		border-width: calc(0.5 * var(--size-border));
		margin: 0;
		transform: scale(1.1);
		width: 150px;
		height: 150px;
		transition: transform 0.6s ease-in-out;
		width: 100%;
	}

	&.has-story img {
		transform: scale(1);
		width: 150px;
		height: 150px;
	}
}

body {
	background-color: var(--color-background, white);
	display: grid;
	height: 100vh;

	.avatar {
		margin: auto;
		width: 160px;
		height: 160px;
	}
}

.card-nosotros {
	background: #00000000;
	width: 100%;
}

.img-nosotros {
	width: 150px;
	height: 150px;
}

@media only screen and (max-width: 767px) {
	.fondo_nosotros {
		height: 100%;
	}

	.nombre_nosotros {
		font-size: 1.8em;
		font-weight: bold;
	}

	.fondo_carousel {
		height: auto !important;
		background: rgba(0, 0, 0, 0.65);
		backdrop-filter: blur(8.5px);
		border-radius: 20px;
	}
}

@import '../../css/quasar.variables.styl';

.visor_corte {
    padding-top: 2%;
}
.gestion_icono
    -webkit-transition: -webkit-transform 0.1s ease-in-out 0s
    transition: transform 0.5s ease-in-out 0s
    color: $accent;
    
.stack_icono
    color: $accent;

.gestion_icono:hover
    -webkit-transform: rotate(360deg)
    width: 200px;
    height: 200px;
    margin: 0 auto;
    transform: rotate(360deg)

.gestion_icono:active
    -webkit-transform: rotate(360deg)
    width: 200px;
    height: 200px;
    margin: 0 auto;
    transform: rotate(360deg)

.gestionar_corte
    box-shadow: 0 0px 0px rgba(0,0,0,0.2), 0 0px 0px rgba(0,0,0,0.14), 0 0px 0px 0px rgba(0,0,0,0.12);    
    background: $primary !important;
    height: 100%;
    border-radius: 15px;

.parametros
    background-color: $primary;    
    border-radius: 15px;

.q-field__marginal {
    height: 56px;
    color: $accent;
    font-size: 20px; 
    padding-top: 10px !important;
}
.titulo_crear {
    color: #00b2ff !important;
    font-family: comfortaa_b;
    font-size: 1.6rem;
}
.q-table__card {
    box-shadow: 0 0px 0px rgba(0,0,0,0.2), 0 0px 0px rgba(0,0,0,0.14), 0 0px 0px 0px rgba(0,0,0,0.12);   
}
.titulo_texto {
    padding-top: 5%;
    color: #00b2ff !important;
    font-family: comfortaa_b;
    font-size: 1.2rem;
}
.input_style {
    padding-left: 15px !important;
    padding-bottom: 15px !important;
}
.volumen_restante {
    font-size: 12px;
    color: $accent;
}
.b_recuperar
    color: $text;  
    font-size: 18px !important;
    font-family: comfortaa_l   


.desechar_corte
    background: $secondary;
    margin-right: 8%;
    color: $text;

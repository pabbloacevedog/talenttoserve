@import '../../css/quasar.variables.styl';
    
#panelDiv
    float: left;

.linea {
    margin: 0px 2.5% 5px 0px;
    width: 100%;
    border-top: 1px solid #4aff00;
    position: relative;
    top: 10px;
    float: left;
}
.linea_mob{
    width: 107%;
    border-top: 1px solid #4aff00;
    position: relative;
    top: 10px;
    float: left;
}
.linea_abajo{
    margin: 25% 15px 2% 0px;
    width: 1px;
    background-color: #4aff00;
    height: 102%;
    float: right;
}
.linea_abajo_mob{
    margin: 65% 10px 0% 0px;
    width: 1px;
    background-color: #4aff00;
    height: 112%;
    float: right;
}
.leyenda {
    font-weight: bold;
    float: left;
    color: #4aff00;
    position: absolute;
    top: 0;
    left: 45%;
    margin-top: 1.5%;
    width: 50px;
    background: $secondary;
}
.leyenda_mobile {
    font-weight:bold;
    float:left;
    color: #4aff00;
    font-size: 10px;
    position: absolute;
    top: 0;
    left: 45%;
    margin-top: 1.5%;
    width: 50px;
    background: $secondary;
}
.leyenda_abajo {
    position: absolute;
    font-weight: bold;
    color: #4aff00;
    float: right;
    width: 3%;
    left: 25px;
    background: $secondary;
}
.leyenda_abajo_mobile {
    font-weight: bold;
    color: #4aff00;
    float: left;
    font-size: 10px;
    left: 0;
    background: $secondary;
    margin-top: 35%;
    position: absolute;
}
.titulo_report {
    color: #00b2ff !important;
    font-family: comfortaa_b;
    font-size: 1vw;
    
}
.texto_report {
    color: $text !important;
    font-family: comfortaa_b;
    font-size: 1vw;
    padding: 1%;
}
.fondo_canvas

.card_datos_corte
    background: $primary;
    border-radius: 20px;
    padding: 2%;
    height: 94%;
.fondo_datos

.tabla_grafico_cortes .q-table__middle .q-table thead tr
    height: 30px !important;

.tabla_grafico_cortes .q-table__middle .q-table tbody tr td
    height: 30px !important;

.tabla_grafico_cortes .q-table__middle .q-table th, .q-table td {
    padding: 0px 12px !important;
    background-color: inherit;
}
#contenedor{

.prelike {
    -webkit-transition: -webkit-transform 0.1s ease-in-out 0s;
    transition: transform 0.5s ease-in-out 0s;
}

.prelike:hover {
    -webkit-transform: rotate(360deg);
    transform: scale3d(1, 1, 1);
}

.prelike:hover div div i {
    color: #ff0076 !important;
}

@keyframes latidos {
    from {
        transform: none;
    }

    10% {
        transform: scale(2);
    }

    to {
        transform: none;
    }
}
